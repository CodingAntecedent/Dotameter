.hero-listing.page{"ng-controller" => "heroCtrl"}
  .content
    .content-inner-border
      .row.hero-header
        .row
          %h1
            {{characterName}}
        .row
          Attack types, roles
      .row.hero-filter
        filter by role, Attack Type, By Name
      .heroes
        // RADIANT
        .row
          .large-4.columns
            %b
              %h1
                Strength
            %h2
              Radiant
            %div{"ng-repeat" => "subArray in radiantStr"}
              .row
                .large-3.columns{"ng-repeat" => "hero in subArray"}
                  .hero-icons
                    %img{:alt => "{{hero.name}}", :src => "{{hero.icon}}", "ng-mouseover" => "toggleCharDetails($event)", "ng-mouseout" => "toggleCharDetails($event)", "data-heroName" => "{{hero.name}}", "data-heroUrl" => "{{hero.url}}", "ng-click" => "showHero($event)"}
